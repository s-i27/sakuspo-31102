<% breadcrumb :rooms_new %>

<div class="rooms">
  <div class="rooms-inner">
    <%= form_with model: @room, local: true do |f| %>

      <%= render 'shared/error_messages', model: f.object  %>
   
      <h1>募集情報新規作成</h1>
      <div class="rooms-gender">
        <%= f.label :catedgory_id, "募集競技" %><br />
         <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"category"}) %>
      </div>
      <div class="rooms-title">
        <%= f.label :title, "タイトル" %><br />
        <%= f.text_field :title, autocomplete: "title" ,class:"rooms_text_filed" %>
      </div>
      <div class="rooms-text">
        <%= f.label :text, "開催内容" %><br />
        <%= f.text_area :text, autofocus: true, autocomplete: "text",class:"rooms_text_area",rows:"10" ,maxlength:"1000",placeholder:"１０００文字以内"  %>
      </div>
      <div class="rooms-price">
        <%= f.label :price, "参加料金" %><br />
        <%= f.text_field :price, autofocus: true, autocomplete: "price",class:"text_price" %>
         <span>円</span>
      </div>

      <div class="rooms-datetime">
        <%= f.label :date_time, "開催日時" %><br />
          <div class='input-wrap'>
            <%= raw sprintf(
                      f.date_select(
                        :date_time,
                        class:'select-box',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2020,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
      </div>

      <div class="rooms-datetime">
        <%= f.label :deadline_date_time, "募集期限" %><br />
          <div class='input-wrap'>
            <%= raw sprintf(
                      f.date_select(
                        :deadline_date_time,
                        class:'select-box',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2020,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
      </div>
      <div class="rooms-place">
        <%= f.label :place, "会場　　" %><br />
        <%= f.text_field :place, autofocus: true, autocomplete: "place",class:"text_place",placeholder: "住所、会場名" %>
      </div>
       <div class="rooms-image">
        <%= f.label :image, "会場や競技中の画像" %><br />
        <%= f.file_field :image, id:"item-image" ,class:"text_image"%>
      </div>
      <div class="rooms-video">
        <%= f.label :video, "競技中動画URL" %><br />
        <%= f.text_field :place, autofocus: true, autocomplete: "place" , placeholder:"任意",class:"text_image" %>
      </div>

      <div class="rooms-submit">
        <%= f.submit "募集する" %>
      </div>

    <% end %>
  </div>
</div>