<% breadcrumb :rooms %>

<div class="slider">
  <%= image_tag '7b32d41bfe5c8f8e7c9ddc609b28438a.jpg' %>
  <%= image_tag 'bf44f1f6a1964b0706dd6048335cf271.png' %>
  <%= image_tag '745ffade772c4255980455af32546f95.png' %>
</div>

<div class='contents'>
  <%= render "shared/side_hedder" %>

  
  <%# 新規募集情報 %>
  <div class='rihgt-contents'>
    <div class='search'>
        <hr class="dm">
          <h1 class='ad-footer-explain'>
            募集を探す</h1>
            <%= search_form_for @p, url: search_rooms_path ,class: 'search-content' do |f| %>
              <%= f.label :title_or_price_or_place_cont, '文字検索：' %>
              <%= f.text_field :title_or_price_or_place_cont, placeholder: "例 サッカー", :size => "50*50",class: 'search-conditions' %>
              <br>
              <%= f.label :title_eq, '競技名：' %>
              <%= f.collection_select :category_id_eq, @category, :id, :name, {}, class: "search-conditions",include_blank: '指定なし' %>
              <br>
              <%= f.label :date_time_eq, '開催日：' %>
              <%= f.date_field :date_time_eq , class: 'search-conditions'%>
              <br>
              <%= f.label :price, '参加料金：' %>
              <%= f.radio_button :price_lteq, '' %>指定なし
              <%= f.radio_button :price_lteq, '500' %>500円以下
              <%= f.radio_button :price_lteq, '1000' %>1000円以下
              <%= f.radio_button :price_lteq, '2500' %>2500円以下
              <%= f.radio_button :price_lteq, '5000' %>5000円以下
              <br>
              <%= f.submit '検索する',class: 'search-submit' %>
            <% end %>
        <hr class="dm"> 
     </div> 

      <div class="new-rooms">
          <h1 class='ad-footer-explain'>
            新着募集情報
          </h1>
            <% @rooms.each do |room| %>
                <%= link_to room_path(room.id) do %>
                  <h2 class="img-title"><%= room.title %><br></h1>
          <div class="content_post" >
                <div class="content_image" >
                  <%= image_tag room.image, :size => '300x200', class: "room-img" %>
                </div> 
                <div class="content_text" >
                  <span class="img-text">　　　　　開催日；　　</span><%= room.date_time %><br></span>
                  <span class="img-text">　　　　　競技名；　　</span><%= room.category.name %><br></tr>
                  <span class="img-text">　　　　　参加料金；　</span><%= room.price %>円<br></span>
                  <span class="img-text">　　　　　会場；　　　</span><%= room.place %><br></span>
                  <span class="img-text">　　　　　主催者；　　</span><%= room.user.nickname %>　様<br></span>
            <% end %>
                </div> 
           </div>
        <% end %>
             <%= paginate @rooms %>
        <hr class="dm">
      </div>
  <%# 新規募集情報 %>

  <%# 人気スポーツ動画 %>
      <div class="view-rooms">
        <hr class="vm">
        <h1 class='ad-footer-explain'>新着スポーツ動画</h1>
          <div class="content_post" >    
            <iframe width="450" height="250" src="https://www.youtube.com/embed/r0jsadE3lQ0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
            <iframe width="450" height="250" src="https://www.youtube.com/embed/T1fsBto5kFo" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <hr class="dm">
      </div>


  </div>

</div> 